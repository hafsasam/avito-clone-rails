<h1>Identification</h1>
<%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form"} ) do |f| %>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :email %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :email, class: "form-control", placeholder: "Entrez votre email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control", placeholder: "Entrez votre mot de passe" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit "Se connecter", class: "btn btn-primary"  %>
    </div>
  </div>
<% end %>