<h1>Actualisation</h1>

<%= form_for(@utilisateur, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :nom %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :nom %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :email %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Actualiser", class: "btn btn-primary"  %>
    </div>
  </div>
<% end %>